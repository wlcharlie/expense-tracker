<div class="container">
  <h2 class="text-center my-5">使用者登入</h3>

    <div class="social-block border text-center py-5">
      <h4 class="social-title">社群登入</h4>
      <a href="/auth/facebook">
        <button class="btn btn-light" style="background-color: #1877f2">
          <div class="d-flex align-items-center">
            <i class="fab fa-facebook-square fa-2x text-white mr-1"></i>
            <span class="text-white font-bold"><strong>以Facebook繼續</strong></span>
          </div>
        </button>
      </a>
      <h4 class="social-title-sub">或者</h4>
    </div>

    <div class="row mt-5">
      {{!-- for login --}}
      <div class="col-md-6">
        <div class="rounded px-3 py-4" style="background-color:#ffefef">
          <h4>登入</h4>
          {{> flashmsgLogin}}
          <hr>
          <form action="/user/login" method="POST">
            <div class="form-group">
              <label for="email">電子信箱</label>
              <input type="email" class="form-control" name="email" id="email" placeholder="Enter email" required>
            </div>
            <div class="form-group">
              <label for="password">密碼</label>
              <input type="password" class="form-control" name="password" id="password" placeholder="Enter Password"
                required>
            </div>

            <div>

              <button type="submit" class="btn btn-danger">登入</button>
              {{!-- flash message --}}
            </div>
          </form>
        </div>
      </div>

      {{!-- for register --}}
      <div class="col-md-6">
        <div class="rounded px-3 py-4" style="background-color:#ffefef">
          <h4>註冊</h4>
          {{> flashmsgReg}}
          <hr>
          <form action="/user/register" method="POST">
            <div class="form-group">
              <label for="name">名字</label>
              <input type="name" class="form-control" name="name" id="name" placeholder="Enter name" required
                value="{{name}}">
            </div>
            <div class="form-group">
              <label for="email">電子信箱</label>
              <input type="email" class="form-control" name="email" id="email" placeholder="Enter email" required
                value="{{email}}">
            </div>
            <div class="form-group">
              <label for="password">密碼</label>
              <input type="password" class="form-control" name="password" id="password" placeholder="Enter Password"
                required>
            </div>
            <div class="form-group">
              <label for="confirmPassword">密碼確認</label>
              <input type="password" class="form-control" name="confirmPassword" id="confirmPassword"
                placeholder="Enter Password Again" required>
            </div>

            <div class="text-right">
              <button type="submit" class="btn btn-primary">註冊</button>{{!-- flash message --}}
            </div>
          </form>
        </div>
      </div>

    </div>
</div>

<div id="fb-root"></div>
