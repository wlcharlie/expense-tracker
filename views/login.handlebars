<div class="container">
  <h2 class="text-center my-5">使用者登入</h3>
    <hr>
    <div class="row mt-5">
      {{!-- for login --}}
      <div class="col-md-6">
        <div class="rounded px-3 py-4" style="background-color:#ffefef">
          <h4>登入</h4>
          <hr>
          <form action="">
            <div class="form-group">
              <label for="email">電子信箱</label>
              <input type="email" class="form-control" name="email" id="email" placeholder="Enter email">
            </div>
            <div class="form-group">
              <label for="password">密碼</label>
              <input type="password" class="form-control" name="password" id="password" placeholder="Enter Password">
            </div>

            <div>
              <button type="submit" class="btn btn-danger">登入</button>
              {{!-- flash message --}}
            </div>
          </form>
        </div>
      </div>

      {{!-- for register --}}
      <div class="col-md-6">
        <div class="rounded px-3 py-4" style="background-color:#ffefef">
          <h4>註冊</h4>
          <hr>
          <form action="">
            <div class="form-group">
              <label for="name">名字</label>
              <input type="name" class="form-control" name="name" id="name" placeholder="Enter name">
            </div>
            <div class="form-group">
              <label for="email">電子信箱</label>
              <input type="email" class="form-control" name="email" id="email" placeholder="Enter email">
            </div>
            <div class="form-group">
              <label for="password">密碼</label>
              <input type="password" class="form-control" name="password" id="password" placeholder="Enter Password">
            </div>
            <div class="form-group">
              <label for="confirmPassword">密碼確認</label>
              <input type="password" class="form-control" name="confirmPassword" id="confirmPassword"
                placeholder="Enter Password Again">
            </div>

            <div class="text-right">
              <button type="submit" class="btn btn-primary">註冊</button>{{!-- flash message --}}
            </div>
          </form>
        </div>
      </div>

    </div>
</div>